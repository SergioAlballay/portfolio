	<!-- Call to Action -->
	<section class="py-5 bg-primary text-white">
		<div class="container text-center">
			<h2 class="mb-4">Ready to Build Quality Software Together? ü§ù</h2>
			<p class="lead mb-4">Let's chat about how I can help ensure your software is not just functional, but exceptional!</p>
			<a href="/contact" class="btn btn-light btn-lg">
				<i class="fas fa-coffee me-2"></i>Let's Grab Coffee & Talk Quality
			</a>
		</div>
	</section>
</Layout>