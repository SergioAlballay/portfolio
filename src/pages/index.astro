---
import Layout from '../layouts/Layout.astro';
import profileData from '../data/profile.json';
import myPhoto from '../images/me.jpg';
---

<Layout title="Home - QA Engineer Portfolio">
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6">
					<h1 class="display-4 fw-bold mb-3">
						Hi, I'm {profileData.personal.name}! üëã
					</h1>
					<h2 class="h3 mb-4">{profileData.personal.title}</h2>
					<p class="lead mb-4">{profileData.personal.tagline}</p>
					<div class="d-flex gap-3 flex-wrap">
						<a href="/about" class="btn btn-light btn-lg">
							<i class="fas fa-user me-2"></i>About Me
						</a>
						<a href="/resume" class="btn btn-light btn-lg">
							<i class="fas fa-file-alt me-2"></i>Resume
						</a>
						<a href="/contact" class="btn btn-light btn-lg">
							<i class="fas fa-envelope me-2"></i>Contact
						</a>
					</div>
				</div>
				<div class="col-lg-6 text-center">
					<div class="position-relative">
						<img src={myPhoto.src} 
							 alt="Professional headshot" 
							 class="img-fluid rounded-circle shadow-lg"
							 style="width: 300px; height: 300px; object-fit: cover;">
						<div class="position-absolute top-0 end-0 bg-success rounded-circle p-2">
							<i class="fas fa-check text-white"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Fun Facts Section -->
	<section class="py-5">
		<div class="container">
			<h2 class="section-title text-center mb-5">Why Work With Me? üöÄ</h2>
			<div class="row g-4">
				{profileData.about.workWithMe.map((fact, index) => (
					<div class="col-md-6 col-lg-4">
						<div class="fun-card card h-100 p-4 text-center">
							<div class="card-body">
								<div class="fs-1 mb-3">{fact.split(' ')[0]}</div>
								<p class="card-text">{fact.substring(fact.indexOf(' ') + 1)}</p>
							</div>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Skills Preview -->
	<section class="py-5 bg-light">
		<div class="container">
			<h2 class="section-title text-center mb-5">My Superpowers üí™</h2>
			<div class="row">
				<div class="col-lg-6 mb-4">
					<h3 class="h4 mb-3">
						<i class="fas fa-code text-primary me-2"></i>Technical Skills
					</h3>
					<div class="d-flex flex-wrap">
						{profileData.skills.technical.map(skill => (
							<span class="skill-badge">{skill}</span>
						))}
					</div>
				</div>
				<div class="col-lg-6 mb-4">
					<h3 class="h4 mb-3">
						<i class="fas fa-heart text-danger me-2"></i>Soft Skills
					</h3>
					<div class="d-flex flex-wrap">
						{profileData.skills.soft.map(skill => (
							<span class="skill-badge">{skill}</span>
						))}
					</div>
				</div>
			</div>
			<div class="text-center mt-4">
				<a href="/resume" class="btn btn-primary btn-lg">
					<i class="fas fa-arrow-right me-2"></i>See Full Resume
				</a>
			</div>
		</div>
	</section>

